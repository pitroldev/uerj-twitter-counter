{
  "compilerOptions": {
    "lib": ["ESNext"],
    "allowJs": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "ES2020",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strictNullChecks": true
  },
  "include": [
    "src/**/*.ts",
    ".eslintrc.js",
    "prettier.config.js"
  ],
  "exclude": [
    "node_modules/**/*",
    ".vscode/**/*"
  ]
}
